<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Material.Light">
    </style>

    <style name="Theme.KZOO" parent="@style/Theme.AppCompat.Light">
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/kzooOrange</item>
        <item name="colorPrimaryDark">@color/OrangeRed</item>
        <item name="colorAccent">@color/kzooOrange</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:colorButtonNormal">@color/kzooOrange</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="Theme.NeutralSwitchStyle" parent="Theme.KZOO">
        <item name="colorAccent">@color/kzooOrange</item>
    </style>

    <style name="NavDrawer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">@dimen/nav_drawer_margin_offset</item>
    </style>

    <style name="CardTitle">
        <item name="android:textColor">@color/primary_text_default_material_light</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CardSubtitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.75</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SingleLineListTextOnly">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_text_default_material_light</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="SingleLineListSecondaryIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="MaterialListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="MaterialButtonFlat" parent="android:Widget.Material.Button.Borderless" />

    <style name="MaterialButton" parent="android:Widget.Material.Button" />

</resources>
