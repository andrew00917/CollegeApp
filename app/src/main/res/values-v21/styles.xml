<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Material.Light">
    </style>

    <style name="Theme.KZOO" parent="@style/Theme.AppCompat.Light">

        <!-- customize the color palette -->
        <item name="colorPrimary">#F00000</item>
        <item name="colorPrimaryDark">#F00000</item>
        <item name="colorAccent">#F80000</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/Theme.Test.DrawerArrowStyle</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="Theme.Test.DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
</resources>
