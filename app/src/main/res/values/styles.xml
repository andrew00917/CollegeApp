<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="KZooActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:title">@string/college</item>
        <item name="android:background">@drawable/blur_actionbar</item>
        <item name="android:icon">@drawable/k_logo</item>
    </style>

    <style name="Widget.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#f27800</item>
    </style>

    <style name="Widget.ActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:icon">@drawable/k_logo</item>
    </style>

    <style name="Theme.KZOO" parent="Theme.AppCompat.Light">

        <!-- customize the color palette -->
        <item name="colorPrimary">@color/DarkOrange</item>
        <item name="colorPrimaryDark">@color/Orange</item>
        <item name="colorAccent">@color/LightSalmon</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/Theme.KZOO.DrawerArrowStyle</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="Theme.KZOO.DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="Toolbar" parent="Theme.AppCompat">

        <!-- android:textColorSecondary is the color of the menu
                 overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">@color/white</item>


    </style>

    <!-- android:textColorPrimary is the  color of the title text
             in the Toolbar, in the Theme.AppCompat theme:  -->
    <!--<item name="android:textColorPrimary">@color/abc_primary_text_material_light</item>-->

    <!-- android:textColorPrimaryInverse is the  color of the title
         text in the Toolbar, in the Theme.AppCompat.Light theme:  -->
    <!-- <item name="android:textColorPrimaryInverse">@color/abc_primary_text_material_light</item> -->

    <!-- android:actionMenuTextColor is the color of the text of
          action (menu) items in the Toolbar, at least in the
          Theme.AppCompat theme.
          For some reason, they already get the textColorPrimary
          when running on API 21, but not on older versions of
          Android, so this is only necessary to support older
          Android versions.-->
    <!--<item name="actionMenuTextColor">@color/abc_primary_text_material_light</item>-->



    <!-- This would set the toolbar's background color,
          but setting this also changes the popup menu's background,
          even if we define popupTheme for our <Toolbar> -->
    <!-- <item name="android:background">@color/color_primary</item> -->
</resources>
