<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="KZooActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:title">@string/college</item>
        <item name="android:background">@drawable/blur_actionbar</item>
        <item name="android:icon">@drawable/k_logo</item>
    </style>

    <style name="Widget.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#f27800</item>
    </style>

    <style name="Widget.ActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:icon">@drawable/k_logo</item>
    </style>

    <style name="Theme.KZOO" parent="Theme.AppCompat.Light">

        <!-- customize the color palette -->
        <item name="colorPrimary">@color/kzooOrange</item>
        <item name="colorPrimaryDark">@color/OrangeRed</item>
        <item name="colorAccent">@color/kzooOrange</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:fitsSystemWindows">true</item>
        <!--<item name="android:buttonStyle">@style/MaterialButton</item>-->
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="Toolbar" parent="Theme.AppCompat">

        <!-- android:textColorSecondary is the color of the menu
                 overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">@color/white</item>

    </style>

    <!-- Nav drawer style to set width specified by Material Design specification -->
    <style name="NavDrawer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">@dimen/nav_drawer_margin_offset</item>
    </style>

    <!--<style name="Theme.NeutralSwitchStyle" parent="Theme.KZOO">
        <item name="colorControlActivated">@color/white</item>
    </style>-->

    <style name="Theme.NeutralSwitchStyle" parent="Theme.KZOO">
        <item name="colorAccent">@color/kzooOrange</item>
    </style>

    <style name="CardTitle">
        <item name="android:textColor">@color/primary_text_default_material_light</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CardSubtitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.75</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="MaterialButtonFlat">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:background">@drawable/material_button_flat</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="MaterialButton" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/material_button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

</resources>
