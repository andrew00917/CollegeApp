<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/example_home_background"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/abc_action_bar_default_height_material"
            app:titleMarginTop="36dp"
            app:popupTheme="@style/Theme.AppCompat.Light"
            app:theme="@style/Toolbar"
            />
            <!--android:minHeight="@dimen/abc_action_bar_default_height_material"-->
            <!--android:background="@drawable/k_banner_day"-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kalamazoo_college"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/kzooOrangeLight"
            android:paddingLeft="24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/more_in_four"
            android:paddingLeft="24dp"
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <!-- The main content view -->
        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        <fragment android:name="com.techhab.collegeapp.HomeFragment"
            android:id="@+id/homeFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_home" />

        <fragment android:name="com.techhab.collegeapp.LogInFragment"
            android:id="@+id/loggedOutHomeFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_log_in" />

        </FrameLayout>

    </LinearLayout>

    <!--Navigation Drawer-->
    <include layout="@layout/navigation_drawer" />


 </android.support.v4.widget.DrawerLayout>
