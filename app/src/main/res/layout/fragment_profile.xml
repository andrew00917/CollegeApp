<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.techhab.collegeapp.ProfileFragment">

    <LinearLayout
        android:id="@+id/profile_general_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal|bottom"
        android:padding="16dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:src="@drawable/custom_progress_bar" />

        <TextView
            android:id="@+id/profile_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:textColor="@color/abc_primary_text_material_light"
            android:textSize="@dimen/abc_text_size_headline_material"/>

        <TextView
            android:id="@+id/profile_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:textColor="@color/abc_secondary_text_material_light"
            android:textSize="@dimen/abc_text_size_subhead_material"/>

    </LinearLayout>

    <include layout="@layout/card_divider" />

    <ListView
        android:id="@+id/profile_listview"
        style="@style/MaterialListView" >

    </ListView>

</LinearLayout>
