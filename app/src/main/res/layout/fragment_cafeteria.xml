<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteSmoke"
    tools:context="com.techhab.collegeapp.CafeteriaFragment">


        <RelativeLayout
            android:id="@+id/panel_side_cafeteria"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:showDividers="middle"
            android:divider="?android:dividerHorizontal">

            <LinearLayout android:id="@+id/cafeteria_status_bar"
                android:layout_width="match_parent"
                android:background="@color/green"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
               <!-- <TextView android:id="@+id/fragment_cafeteria_tvInfo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:text="@string/open"/>-->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/OpenGreen">

                        <ImageView
                            android:id="@+id/fragment_cafeteria_image"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/open_sign"/>

                        </FrameLayout>

                        <TextView android:id="@+id/fragment_cafeteria_tvInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:textColor="@color/abc_secondary_text_material_dark"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:text="Closes in 2 hours"
                            />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:src="@drawable/ic_action_expand"
                            android:id="@+id/ibExpandable"
                            android:layout_gravity="center_vertical"
                            />

                    </LinearLayout>

                <TextView android:id="@+id/fragment_cafeteria_tvTimeDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:visibility="gone"
                    android:paddingTop="4dp"
                    android:animateLayoutChanges="true"
                    android:textColor="@color/abc_secondary_text_material_dark"
                    android:layout_marginLeft="70dp"
                    android:text="Monday-Friday 8:00-10:00pm\nSaturdays 12:00-6:00pm\nSundays 10-7pm"
                    />

            </LinearLayout>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_cafeteria_spinner"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_cafeteria_rvMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cafeteria_status_bar"/>

        </RelativeLayout>

</FrameLayout>
