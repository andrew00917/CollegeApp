<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteSmoke"
    tools:context="com.techhab.collegeapp.CafeteriaFragment">


        <RelativeLayout
            android:id="@+id/panel_side_cafeteria"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:showDividers="middle"
            android:divider="?android:dividerHorizontal">

            <LinearLayout android:id="@+id/cafeteria_status_bar"
                android:layout_width="match_parent"
                android:background="@drawable/caf_status_bar_background"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
               <!-- <TextView android:id="@+id/fragment_cafeteria_tvInfo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:text="@string/open"/>-->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <!--android:background="@color/OpenGreen"-->

                        <ImageView
                            android:id="@+id/fragment_cafeteria_image"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/open_sign"/>

                        </FrameLayout>
                    
                        <FrameLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">

                            <TextView android:id="@+id/fragment_cafeteria_tvInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16dp"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/abc_secondary_text_material_dark"
                                android:gravity="center_vertical"
                                android:layout_gravity="center_vertical"
                                android:text="Closes in 2 hours"
                                android:singleLine="true"
                                android:layout_marginRight="5dp"
                                />

                            <ImageView
                                android:id="@+id/status_bar_arrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:src="@drawable/ic_action_expand"
                                android:layout_marginRight="12dp"
                                android:layout_gravity="center_vertical|right"
                                />

                        </FrameLayout>

                    </LinearLayout>

                <LinearLayout
                    android:id="@+id/status_bar_extended_info_frame"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/monday_friday"
                        android:textStyle="bold"
                        android:textColor="@color/abc_secondary_text_material_dark"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mealtimes_mf"
                        android:textColor="@color/abc_secondary_text_material_dark"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/saturday"
                        android:textStyle="bold"
                        android:textColor="@color/abc_secondary_text_material_dark"/>

                    <TextView
                        android:id="@+id/status_bar_extended_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:paddingTop="4dp"
                        android:textColor="@color/abc_secondary_text_material_dark"
                        android:layout_marginLeft="70dp"
                        android:text="Monday-Friday 8:00-10:00pm\nSaturdays 12:00-6:00pm\nSundays 10-7pm"
                        />

                    </LinearLayout>

            </LinearLayout>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"


                android:id="@+id/fragment_cafeteria_spinner"
                android:drawSelectorOnTop="true"
                style="@style/SpinnerStyle"
                android:layout_below="@+id/cafeteria_status_bar"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_cafeteria_rvMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_cafeteria_spinner"
                android:descendantFocusability="afterDescendants"
                />

        </RelativeLayout>

</FrameLayout>
