<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<include layout="@layout/card_divider" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/opponent_logo"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:src="@drawable/western_michigan_broncos"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/opponent_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/primary_text_default_material_light"
                android:text="Western Mich." />

            <TextView
                android:id="@+id/game_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text_default_material_light"
                android:text="Dec 20, 8:30PM"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/home_away"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:textColor="@color/secondary_text_default_material_light"
            android:alpha="0.75"
            android:textStyle="bold"
            android:gravity="center_vertical|right"/>

    </LinearLayout>

</LinearLayout>