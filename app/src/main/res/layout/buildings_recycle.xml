<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    style="@style/CardView">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/building_banner"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:background="@drawable/domo">

            <TextView
                android:id="@+id/building_title"
                android:padding="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                style="@style/CardTitle"
                android:textColor="@color/abc_primary_text_material_dark" />

        </FrameLayout>

        <TextView
            android:id="@+id/building_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColor="@color/primary_text_default_material_light"
            android:textSize="@dimen/abc_text_size_body_1_material" />

        <include layout="@layout/card_divider" />

        <LinearLayout
            android:id="@+id/button_section"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/read_more_button"
                style="@style/MaterialButtonFlat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text_default_material_light"
                android:text="@string/read_more"/>

            <Button
                android:id="@+id/mapit_button"
                style="@style/MaterialButtonFlat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main00"
                android:text="@string/map_it"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>