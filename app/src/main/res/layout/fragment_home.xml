<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.techhab.collegeapp.HomeFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/icon_vertical_margin"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/main_menu_00"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/icon_horizontal_margin"
                android:layout_marginEnd="@dimen/icon_horizontal_margin"
                android:gravity="center"
                android:contentDescription="@string/content_description"
                android:src="@drawable/money"
                android:clickable="true" />

            <ImageView
                android:id="@+id/main_menu_01"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/icon_horizontal_margin"
                android:layout_marginStart="@dimen/icon_horizontal_margin"
                android:gravity="center"
                android:contentDescription="@string/content_description"
                android:src="@drawable/graph"
                android:clickable="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/icon_vertical_margin"
            android:layout_marginBottom="@dimen/icon_vertical_margin"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/main_menu_10"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/icon_horizontal_margin"
                android:layout_marginEnd="@dimen/icon_horizontal_margin"
                android:gravity="center"
                android:contentDescription="@string/content_description"
                android:src="@drawable/docs"
                android:clickable="true" />

            <ImageView
                android:id="@+id/main_menu_11"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/icon_horizontal_margin"
                android:layout_marginStart="@dimen/icon_horizontal_margin"
                android:gravity="center"
                android:contentDescription="@string/content_description"
                android:src="@drawable/location"
                android:clickable="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/icon_vertical_margin"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/main_menu_20"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/icon_horizontal_margin"
                android:layout_marginEnd="@dimen/icon_horizontal_margin"
                android:gravity="center"
                android:contentDescription="@string/content_description"
                android:src="@drawable/payments"
                android:clickable="true" />

            <ImageView
                android:id="@+id/main_menu_21"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/icon_horizontal_margin"
                android:layout_marginStart="@dimen/icon_horizontal_margin"
                android:gravity="center"
                android:contentDescription="@string/content_description"
                android:src="@drawable/dots"
                android:clickable="true" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout android:id="@+id/progress_container"
        android:background="@color/trans"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" >

        <ProgressBar
            style="@android:style/Widget.ProgressBar.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </FrameLayout>

</FrameLayout>