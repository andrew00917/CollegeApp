<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/drawerBackground"
    android:orientation="vertical"
    tools:context=".NavigationDrawerFragment" >

    <ImageView
        android:id="@+id/nav_image"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:padding="12dp"
        android:src="@drawable/account"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/profile_layout"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/text_view_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nav_user_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textSize="14sp"
            android:textColor="@color/theGray"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:text="Griffin Smalley"/>

        <TextView
            android:id="@+id/user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/theGray"
            android:layout_below="@+id/nav_user_name"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:text="k13gs03@kzoo.edu" />

        </RelativeLayout>

    </LinearLayout>

    <!-- divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:padding="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/drawerDivider"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"
        android:divider="@null"
        android:background="@color/drawerBackground"
        android:id="@+id/drawer_list" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:padding="20dp"
        android:background="@color/drawerDivider" />



</LinearLayout>