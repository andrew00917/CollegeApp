<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:id="@+id/food_wells_menu_item_cvRoot"
    android:focusable="true"
    style="@style/CardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/food_wells_menu_item_llContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/menu_item_tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lunch"
                style="@style/CardTitle"/>

        </LinearLayout>

        <include layout="@layout/card_divider" />

        <ToggleButton android:id="@+id/fragment_cafeteria_tbViewMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="@string/view_more"
            android:textOn="@string/view_less"
            style="@style/MaterialButtonFlat"
            android:textColor="@color/kzooOrange"
            android:layout_gravity="right|center_vertical" />

    </LinearLayout>



</android.support.v7.widget.CardView>