<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.techhab.collegeapp" >

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--
         The following two permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".application.CollegeApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.KZOO" >

        <service
            android:name="com.techhab.rss.EventsRssService"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- Google Maps Fragment API Key Data -->
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyBdvZxaqcYoM-jhRO3OACQtLVBJy1-XJCc" />

        <!-- Home Activity -->
        <activity
            android:name="com.techhab.collegeapp.HomeActivity"
            android:label="@string/college" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Menu Activities -->
        <activity
            android:name="com.techhab.collegeapp.AcademicActivity"
            android:label="@string/title_activity_academic" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.techhab.collegeapp.HomeActivity" />
        </activity>
        <activity
            android:name="com.techhab.collegeapp.CampusActivity"
            android:label="@string/title_activity_campus" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.techhab.collegeapp.HomeActivity" />
        </activity>
        <activity
            android:name="com.techhab.collegeapp.FoodActivity"
            android:label="@string/title_activity_food" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.techhab.collegeapp.HomeActivity" />
        </activity>
        <activity
            android:name="com.techhab.collegeapp.AthleticActivity"
            android:theme="@style/Theme.NeutralSwitchStyle"
            android:label="@string/title_activity_athletic" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.techhab.collegeapp.HomeActivity" />
        </activity>
        <activity
            android:name="com.techhab.collegeapp.EventsActivity"
            android:label="@string/title_activity_events" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.techhab.collegeapp.HomeActivity" />
        </activity>
        <activity
            android:name="com.techhab.collegeapp.NewsActivity"
            android:label="@string/title_activity_news" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.techhab.collegeapp.HomeActivity" />
        </activity>


        <activity
            android:name="com.techhab.collegeapp.InfoActivity"
            android:label="@string/title_activity_info" >
        </activity>
        <activity
            android:name="com.techhab.collegeapp.MapsActivity"
            android:label="@string/title_activity_maps" >
        </activity>
        <activity
            android:name="com.techhab.collegeapp.CafeteriaActivity"
            android:label="@string/title_activity_cafeteria" >
        </activity>
        <activity
            android:name="com.techhab.collegeapp.TermActivity"
            android:label="@string/title_activity_term" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.techhab.collegeapp.AcademicActivity" />
        </activity>

    </application>

</manifest>
